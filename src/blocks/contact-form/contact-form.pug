//- Все примеси в этом файле должны начинаться c имени блока (contact-form)

mixin contact-form(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +contact-form('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' contact-form--' + modsList[i].trim();
      }
    }

  form.contact-form(class=allMods)&attributes(attributes)
    block
