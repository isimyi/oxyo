extends pug/layout.pug

block meta
  title Главная
  meta(name='description', content='')
block page
  block header
    header.page-header.page-header--absolute
      .page-header__inner
        +greeting('Привет', 'img/sprite-svg.svg#icon-hand', true)(id='home-greeting')
        +nav-toggler('Показать главное меню', 'main-nav', 'main-nav--visible')
        +main-nav()
          #first-letter-clone
            #letter-circle-clone
          ul.main-nav__list
            +main-nav-item('about-us.html', 'Мы')
            +main-nav-item('portfolio.html', 'Работа')
            +main-nav-item('contacts.html', 'Контакты')

  block content
    .promo
      .promo__inner#promo-inner
        .promo__content(data-depth='0.0')
          h1.promo__title.visually-hidden Студия OXYO
          svg.promo__logo#promo-logo(x="0px" y="0px" viewBox="0 0 242.3 68.6" xml:space="preserve")
            path(class="logo-letter" d="M34.3,0C15.4,0,0,15.4,0,34.3c0,18.9,15.4,34.3,34.3,34.3c18.9,0,34.3-15.4,34.3-34.3C68.6,15.4,53.2,0,34.3,0z M34.3,54.1c-10.9,0-19.9-8.9-19.9-19.9c0-10.9,8.9-19.9,19.9-19.9c10.9,0,19.9,8.9,19.9,19.9C54.1,45.2,45.2,54.1,34.3,54.1z")
